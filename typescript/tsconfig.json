{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ES2017",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/models/*",
              "src/types/*",
              "src/utils/*",
          ]
      },
  },
  "include": [
      "src/**/*"
  ],
}
